<Page x:Class="WpfApp1.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Login" Margin="5"/>
            <TextBox Name="LoginTb" Width="100"/>
            <TextBlock Text="Password" Margin="5"/>
            <TextBox Name="PasswordTb" Width="100"/>
            <TextBlock Text="Name" Margin="5"/>
            <TextBox Name="NameTb" Width="100"/>
            <TextBlock Text="SurName" Margin="5"/>
            <TextBox Name="SurNameTb" Width="100"/>

            <Button Content="Зарегистрироваться" Margin="5" x:Name="BtnReg" Click="BtnReg_Click"/>
        </StackPanel>

    </Grid>
</Page>
